<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pomodoroapps">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logobaru"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logobaru_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PomodoroApps">
        <activity
            android:name=".main.SettingActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/Theme.Settings" />

        <activity
            android:name=".main.SplashScreen"
            android:exported="true"
            android:launchMode="singleTop"
            android:noHistory="true"
            android:theme="@style/splashscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".main.TimerApps"
            android:launchMode="singleTop"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".main.MainActivity"
            android:launchMode="singleTop"
            android:screenOrientation="fullSensor" />
    </application>

</manifest>